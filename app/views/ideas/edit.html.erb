<div class="container">
  <div class="row text-center">
    <h1>Edit Idea</h1>
    <div class="col-md-offset-4 col-md-4">
      <%= form_for(@idea) do |f| %>
        <div class="form-group ">
          <%= f.text_field :title, class:"form-control" %>
          <%= f.text_area :body, class:"form-control" %>
          
        </div>
        <%= f.submit class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>